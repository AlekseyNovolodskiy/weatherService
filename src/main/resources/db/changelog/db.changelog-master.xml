<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="1" author="your_name">
        <!-- Создаем последовательность для пользователей -->
        <createSequence
                sequenceName="user_info_sequence"
                startValue="2"
                incrementBy="1"/>

        <!-- Создаем таблицу пользователей -->
        <createTable tableName="user_info">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="login" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="firstname" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="lastname" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Добавляем администратора -->
        <insert tableName="user_info">
            <column name="id" valueNumeric="1"/>
            <column name="login" value="admin"/>
            <column name="firstname" value="admin"/>
            <column name="lastname" value="admin"/>
            <column name="password" value="admin"/>
        </insert>

        <!-- Создаем последовательность для локаций -->
        <createSequence
                sequenceName="location_sequence"
                startValue="2"
                incrementBy="1"/>

        <!-- Создаем таблицу локаций -->
        <createTable tableName="location">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="location_name" type="VARCHAR(255)"/>
            <column name="latitude" type="VARCHAR(255)"/>
            <column name="longitude" type="VARCHAR(255)"/>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_location_user" references="user_info(id)"/>
            </column>
        </createTable>

        <!-- Добавляем тестовую локацию -->
        <insert tableName="location">
            <column name="id" valueNumeric="1"/>
            <column name="location_name" value="Test Location"/>
            <column name="latitude" value="57.7"/>
            <column name="longitude" value="37.7"/>
            <column name="user_id" valueNumeric="1"/>
        </insert>
    </changeSet>
</databaseChangeLog>